<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--加载中等待对话框-->
    <style name="Dialog_bocop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="photo_dialog_bg_style" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:animation">@style/dialog_bottom_up_style</item>-->
    </style>
    <!-- 定义对话框下往上弹出效果的文件 -->
    <style name="dialog_bottom_up_style">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_bottom_to_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_top_to_bottom</item>
    </style>
</resources>